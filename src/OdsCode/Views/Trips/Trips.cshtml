@{
    ViewBag.Title = "Trip Planner";
}

@section Scripts {
    <!-- Gmaps Api -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyClVHLUqTOBlEQa-v0Zj0keLRxGUmHZcMg&libraries=places"></script>

    <script src="~/js/OdsShowMap/OdsShowMap.js"></script>
}

<!--Section: Contact v.1-->
<section class="section m-b-4">

    <!--Section heading-->
    <h1 class="section-heading">@ViewBag.Title</h1>
    <!--Section description-->
    <!-- <p class="section-description m-b-5">Manage your trip below.</p> -->

    <div class="row">

        <!--First column-->
        <div class="col-md-5">
            <div class="description">
                <h2 class="h2-responsive wow fadeInLeft" data-wow-delay="0.2s">Ready for an adventure? </h2>
                <hr class="hr-dark wow fadeInLeft">
                <p class="wow fadeInLeft" data-wow-delay="0.4s">Create your trip locally, in your county or around the world.</p>
                <br>
                <a class="btn btn-primary btn-lg wow fadeInLeft" data-wow-delay="0.7s" asp-controller="Trips" asp-action="All">Create my trip!</a>
            </div>
        </div>
        <!--/First column-->

        <!--Second column-->
        <div class="col-md-7">

            <!--Google map-->
            <div id="map" class="z-depth-1-half map-container" style="height: 400px"></div>

            <br>
            <!--Buttons-->
            <div class="row text-xs-center">
                <div class="col-md-4">
                    <a class="btn-floating btn-small stylish-color-dark" data-toggle="tooltip" data-placement="bottom" title="Plan Your Trip"><i class="fa fa-map"></i></a>
                </div>

                <div class="col-md-4">
                    <a class="btn-floating btn-small stylish-color-dark" data-toggle="tooltip" data-placement="bottom" title="Include Special Stops"><i class="fa fa-ticket"></i></a>
                </div>

                <div class="col-md-4">
                    <a class="btn-floating btn-small stylish-color-dark" data-toggle="tooltip" data-placement="bottom" title="Search For Adventures"><i class="fa fa-search"></i></a>
                </div>
            </div>

        </div>
        <!--/Second column-->

    </div>

</section>
<!--/Section: Contact v.1-->